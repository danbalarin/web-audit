{
  "name": "web-audit-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "cd .. && husky ./application/.husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@turbo/gen": "^2.2.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.1.0",
    "turbo": "^2.2.3",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": "^20.15.0"
  },
  "packageManager": "yarn@1.22.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
