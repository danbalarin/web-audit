{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local", ".env"],
	"globalEnv": ["VERCEL_URL"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": ["CHROMIUM_PATH"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"inputs": [".env"],
			"env": ["DB_NAME", "DB_USER", "DB_PASSWORD", "DB_HOST", "DB_PORT"]
		}
	}
}
