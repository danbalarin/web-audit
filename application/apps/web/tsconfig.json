{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.mjs",
		".next/types/**/*.ts",
		"../../packages/**/typings/*.d.ts"
	],
	"exclude": ["node_modules"]
}
